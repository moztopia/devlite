###### MariaDB Environment Variables
MYSQL_DATABASE=devstation
MYSQL_USER=devstation
MYSQL_PASSWORD=secret
MYSQL_ROOT_PASSWORD=secret

###### Additional MariaDB Variables
# MYSQL_ALLOW_EMPTY_PASSWORD=no              # Default: no
# MYSQL_RANDOM_ROOT_PASSWORD=no              # Default: no
# MYSQL_ONETIME_PASSWORD=no                  # Default: no

###### Timezone Configuration
# MYSQL_INITDB_SKIP_TZINFO=no                # Default: no

###### Optional: Replication Setup (if required)
# MARIADB_REPLICATION_MODE=slave
# MARIADB_REPLICATION_USER=replica_user
# MARIADB_REPLICATION_PASSWORD=replica_password

###### Optional: Galera Cluster Configuration (if applicable)
# MARIADB_GALERA_CLUSTER_NAME=my_cluster
# MARIADB_GALERA_NODE_NAME=node1
